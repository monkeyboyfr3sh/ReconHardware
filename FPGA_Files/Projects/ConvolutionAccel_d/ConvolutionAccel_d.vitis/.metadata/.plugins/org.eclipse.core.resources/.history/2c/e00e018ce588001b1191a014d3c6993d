#define filter_base 	24
#define data_base 		60

#define TX_PCKT_LEN		(img_width*img_height)
#define RX_PCKT_LEN		((img_width-2)*(img_height-2))
#define TX_BYTE_CNT		4*TX_PCKT_LEN
#define RX_BYTE_CNT		4*RX_PCKT_LEN


