/*
 * helloworld.c: simple test application
 *
 * This application configures UART 16550 to baud rate 9600.
 * PS7 UART (Zynq) is not initialized by this application, since
 * bootrom/bsp configures it to baud rate 115200
 *
 * ------------------------------------------------
 * | UART TYPE   BAUD RATE                        |
 * ------------------------------------------------
 *   uartns550   9600
 *   uartlite    Configurable only in HW design
 *   ps7_uart    115200 (configured by bootrom/bsp)
 */

#include <stdio.h>
#include "platform.h"
#include "xil_printf.h"
#include "xgpio.h"
#include "sleep.h"

#define bufferInput 		0
#define cStart 				1
#define Rst	 				2
#define io_clk 				3
#define newline 			4
#define rd 					5
#define wr 					6
#define buffered_conv_out	7
#define FULL_IN 			8
#define EMPTY_IN			9
#define FULL_OUT 			10
#define EMPTY_OUT 			11

XGpio GPIO_Arr[12];

void driverInit() {
	int status;

	status = XGpio_Initialize(&GPIO_Arr[0], XPAR_AXI_GPIO_0_DEVICE_ID);
	if (status != XST_SUCCESS) {
		printf("GPIO %d Initalization failed\n\r",0);
	} else {
		printf("GPIO %d Initialization successful\n\r",0);
	}

	status = XGpio_Initialize(&GPIO_Arr[1], XPAR_AXI_GPIO_1_DEVICE_ID);
	if (status != XST_SUCCESS) {
		printf("GPIO %d Initalization failed\n\r",1);
	} else {
		printf("GPIO %d Initialization successful\n\r",1);
	}

	status = XGpio_Initialize(&GPIO_Arr[2], XPAR_AXI_GPIO_2_DEVICE_ID);
	if (status != XST_SUCCESS) {
		printf("GPIO %d Initalization failed\n\r",2);
	} else {
		printf("GPIO %d Initialization successful\n\r",2);
	}

	status = XGpio_Initialize(&GPIO_Arr[3], XPAR_AXI_GPIO_3_DEVICE_ID);
	if (status != XST_SUCCESS) {
		printf("GPIO %d Initalization failed\n\r",3);
	} else {
		printf("GPIO %d Initialization successful\n\r",3);
	}

	status = XGpio_Initialize(&GPIO_Arr[4], XPAR_AXI_GPIO_4_DEVICE_ID);
	if (status != XST_SUCCESS) {
		printf("GPIO %d Initalization failed\n\r",4);
	} else {
		printf("GPIO %d Initialization successful\n\r",4);
	}

	status = XGpio_Initialize(&GPIO_Arr[5], XPAR_AXI_GPIO_5_DEVICE_ID);
	if (status != XST_SUCCESS) {
		printf("GPIO %d Initalization failed\n\r",5);
	} else {
		printf("GPIO %d Initialization successful\n\r",5);
	}

	status = XGpio_Initialize(&GPIO_Arr[6], XPAR_AXI_GPIO_6_DEVICE_ID);
	if (status != XST_SUCCESS) {
		printf("GPIO %d Initalization failed\n\r",6);
	} else {
		printf("GPIO %d Initialization successful\n\r",6);
	}

	status = XGpio_Initialize(&GPIO_Arr[7], XPAR_AXI_GPIO_7_DEVICE_ID);
	if (status != XST_SUCCESS) {
		printf("GPIO %d Initalization failed\n\r",7);
	} else {
		printf("GPIO %d Initialization successful\n\r",7);
	}

	status = XGpio_Initialize(&GPIO_Arr[8], XPAR_AXI_GPIO_8_DEVICE_ID);
	if (status != XST_SUCCESS) {
		printf("GPIO %d Initalization failed\n\r",8);
	} else {
		printf("GPIO %d Initialization successful\n\r",8);
	}

	status = XGpio_Initialize(&GPIO_Arr[9], XPAR_AXI_GPIO_9_DEVICE_ID);
	if (status != XST_SUCCESS) {
		printf("GPIO %d Initalization failed\n\r",9);
	} else {
		printf("GPIO %d Initialization successful\n\r",9);
	}

	status = XGpio_Initialize(&GPIO_Arr[10], XPAR_AXI_GPIO_10_DEVICE_ID);
	if (status != XST_SUCCESS) {
		printf("GPIO %d Initalization failed\n\r",10);
	} else {
		printf("GPIO %d Initialization successful\n\r",10);
	}

	status = XGpio_Initialize(&GPIO_Arr[11], XPAR_AXI_GPIO_11_DEVICE_ID);
	if (status != XST_SUCCESS) {
		printf("GPIO %d Initalization failed\n\r",11);
	} else {
		printf("GPIO %d Initialization successful\n\r",11);
	}
}

void configGpio() {

	//Outputs
	XGpio_SetDataDirection(&GPIO_Arr[0], 1, 0);
	XGpio_SetDataDirection(&GPIO_Arr[1], 1, 0);
	XGpio_SetDataDirection(&GPIO_Arr[2], 1, 0);
	XGpio_SetDataDirection(&GPIO_Arr[3], 1, 0);
	XGpio_SetDataDirection(&GPIO_Arr[4], 1, 0);
	XGpio_SetDataDirection(&GPIO_Arr[5], 1, 0);
	XGpio_SetDataDirection(&GPIO_Arr[6], 1, 0);

	//Inputs
	XGpio_SetDataDirection(&GPIO_Arr[7], 1, 1);
	XGpio_SetDataDirection(&GPIO_Arr[8], 1, 1);
	XGpio_SetDataDirection(&GPIO_Arr[9], 1, 1);
	XGpio_SetDataDirection(&GPIO_Arr[10], 1, 1);
	XGpio_SetDataDirection(&GPIO_Arr[11], 1, 1);

	//Tie outputs low
	XGpio_DiscreteSet(&GPIO_Arr[0], 1, 0);
	XGpio_DiscreteSet(&GPIO_Arr[1], 1, 0);
	XGpio_DiscreteSet(&GPIO_Arr[2], 1, 0);
	XGpio_DiscreteSet(&GPIO_Arr[3], 1, 0);
	XGpio_DiscreteSet(&GPIO_Arr[4], 1, 0);
	XGpio_DiscreteSet(&GPIO_Arr[5], 1, 0);
	XGpio_DiscreteSet(&GPIO_Arr[6], 1, 0);

	print("GPIO Configured successfully\n\r");
}
void ioclk(){
	//Set pin high
	XGpio_SetDataDirection(&GPIO_Arr[3], 1, 1);
	//Set pin low
	XGpio_SetDataDirection(&GPIO_Arr[3], 1, 0);
}

void load_value(int input_val){

	//Set wr high
	XGpio_DiscreteSet(&GPIO_Arr[6], 1, 1);
	//Write input value to buffer input
	XGpio_DiscreteSet(&GPIO_Arr[0], 1, input_val);
	ioclk();
	printf("Value loaded into buffer %d\r\n",input_val);
}

int main()
{
    init_platform();

    print("Hello World\n\r");

    driverInit();
    configGpio();

    cleanup_platform();
    return 0;
}
